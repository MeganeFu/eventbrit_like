<%= form_for @user do |f| %>
<div class="body-blue">
 <div class="container">
   <div class="row">
     <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
       <div class="card card-signin my-5">
         <div class="card-body">
              <h1 class="h3 mb-3 font-weight-normal text-center">Complète ton profil</h1>
					 
					 	<div class="form-group">
							<label>Prénom</label>
							<%= f.text_field :first_name, class: 'form-control' %>
							<br>
  						<label>Nom</label>
							<%= f.text_field :last_name, class: 'form-control' %>
							<br>
	 						<label>Description</label>
							<%= f.text_area :description, class: 'form-control' %>
					 	</div>
					 	<div class="form-group">
						<div class="actions mt-5 mb-4">
                <%= f.submit "Enregistre", class:"btn btn-lg btn-dark btn-block text-uppercase" %>
              </div>
							<br><br>
							<%= link_to "Back", :back %>
					 	</div>
				 </div>
			 </div>
		 </div>
	 </div>
	</div>
</div>
	 

					 	<% end %>